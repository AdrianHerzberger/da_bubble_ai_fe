{
  "openapi": "3.0.0",
  "info": {
    "title": "Blog CMS API",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:5001" }],
  "paths": {
    "/api/users/{user_id}": {
      "get": {
        "summary": "Get user by ID",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "user_name": { "type": "string" },
                    "user_email": { "type": "string" },
                    "user_profile_picture_url": { "type": "string" }
                  }
                }
              }
            }
          },
          "404": { "description": "User not found" }
        }
      }
    },
    "/api/users/{user_email}": {
      "get": {
        "summary": "Get user by email",
        "parameters": [
          {
            "name": "user_email",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "user_name": { "type": "string" },
                    "email": { "type": "string" },
                    "user_profile_picture_url": { "type": "string" }
                  }
                }
              }
            }
          },
          "404": { "description": "User not found" }
        }
      }
    },
    "/api/register_user": {
      "post": {
        "summary": "Register a new user",
        "requestBody": {
          "description": "User registration data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_name": { "type": "string" },
                  "user_email": { "type": "string", "format": "email" },
                  "user_password": { "type": "string" }
                },
                "required": ["user_name", "user_email", "user_password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "user_name": { "type": "string" },
                    "user_email": { "type": "string", "format": "email" },
                    "user_password": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error creating user"
          }
        }
      }
    },
    "/api/sign_in_user": {
      "post": {
        "summary": "Login a user",
        "requestBody": {
          "description": "User login data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_email": { "type": "string", "format": "email" },
                  "user_password": { "type": "string" },
                  "user_profile_picture_url": { "type": "string" }
                },
                "required": [
                  "user_email",
                  "user_password",
                  "user_profile_picture_url"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Login user successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "user_email": { "type": "string", "format": "email" },
                    "user_password": { "type": "string" },
                    "user_profile_picture_url": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error login user"
          }
        }
      }
    },
    "/api/create_channel": {
      "post": {
        "summary": "Create a channel",
        "requestBody": {
          "description": "Create channel data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "channel_name": { "type": "string" },
                  "channel_description": { "type": "string" },
                  "channel_color": { "type": "string" },
                  "user_id": { "type": "number" }
                },
                "required": [
                  "channel_name",
                  "channel_description",
                  "channel_color",
                  "user_id"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Channel created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "channel_name": { "type": "string" },
                    "channel_description": { "type": "string" },
                    "channel_color": { "type": "string" },
                    "user_id": { "type": "number" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error creating channel"
          }
        }
      }
    }
  }
}
